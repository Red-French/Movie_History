<!-- PUT OMDB MOVIE POSTER AND MOVIE INFO HERE -->
<div class="container">
  <div class="movies-row row">
    {{#each this}} 
      <div class="col-md-3">
        <div class="movie" data-toggle="modal" data-target="#movie-modal">
          <img class="movie-poster" src="{{Poster}}" alt="{{Title}}" imdbID="{{imdbID}}" data-toggle="modal" data-target="#movie-modal">
          <button id="btn-delete-movie" class="glyphicon glyphicon-remove-circle"></button>
        </div>
        <div class="stars-container" data-toggle="modal" data-target="#stars-modal">
          {{#if Rating}}
            {{#times Stars}}
              <div class="starz" stars="{{Stars}}">
                  <img src='data:image/svg+xml;base64,'>
              </div>
            {{/times}}

            {{#times Stars-blank}}
              <div class="starz" blank-stars="{{Stars-blank}}">
                  <img src='data:image/svg+xml;base64,'>
              </div>
            {{/times}}
          </div>
          {{else}}
          <button class="btn btn-primary btn-watched-movie" type="button">Watched</button>
        {{/if}}

      </div>
    {{/each}}
  </div>
</div>