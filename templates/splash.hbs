<div class="text-center container container-fluid">
	<div class="row">
		<div class="col-md-8">
			<h1>Movie History</h1>
			<form>
				<!-- email email -->
				<div class="row">
  					<input type="text" id="email" required="true" placeholder="user@email.com" autofocus>
  				</div>

  				<!-- password input -->
  				<div class="row">
  					<input type="password" id="pwd" maxlength="10" required="true" placeholder="password">
  				</div>

  				<!-- login/register buttons -->
  				<div class="row">
  					<button id="btn-register" class="btn btn-default" type="button">Register</button>
  					<button id="btn-login" class="btn btn-default" type="button">Login</button>
  				</div>
        
				 <div class="row">
					<a class="resetPwd" href="#">Forgot password?</a>
        			</div>
			</form>
        </div>
    </div>
</div>

